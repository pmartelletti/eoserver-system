            foreach ($condition_group['conditions'] as &$condition) {
                if ($condition['field'] == 'field_data_field_categor_a.field_categor_a_tid' && filter_input(INPUT_GET, 'field_categor_a_tid', FILTER_DEFAULT, array('options' => array('default' => 'All'))) != 'All') {
                    $condition['value'] = array();
                    $condition['value'] = array(filter_input(INPUT_GET, 'field_categor_a_tid', FILTER_DEFAULT) => filter_input(INPUT_GET, 'field_categor_a_tid', FILTER_DEFAULT));
                }
                if ($condition['field'] == 'location.city' && filter_input(INPUT_GET, 'city', FILTER_DEFAULT) != 'All') {
                    if (filter_input(INPUT_GET, 'city', FILTER_DEFAULT)) {
                        $condition['value'] = filter_input(INPUT_GET, 'city', FILTER_DEFAULT, array('options' => array('default' => '%')));
                    }
                }
                /*if ($condition['field'] == 'location.country') {
                    $condition['value'] = filter_input(INPUT_GET, 'country', FILTER_DEFAULT, array('options' => array('default' => 'ar')));
                }*/
            }
        }
        /* @var $query views_plugin_query_default */
        if ($value = filter_input(INPUT_GET, 'province', FILTER_DEFAULT, array('options' => array('default' => 'B')))) {
            $query->add_where(1, 'location.province', $value);
        }
